<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.witt.presentation.ui.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />
        <action
            android:id="@+id/action_signInFragment_to_plan_nav"
            app:destination="@id/plan_nav" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.witt.presentation.ui.signup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.example.witt.presentation.ui.profile_edit.ProfileEditFragment"
        android:label="fragment_profile_edit"
        tools:layout="@layout/fragment_profile_edit" >
        <action
            android:id="@+id/action_profileEditFragment_to_plan_nav"
            app:destination="@id/plan_nav" />
    </fragment>
    <fragment
        android:id="@+id/mapSearchFragment"
        android:name="com.example.witt.presentation.ui.plan.drawup_plan.MapSearchFragment"
        android:label="fragment_map_search"
        tools:layout="@layout/fragment_map_search" >
        <action
            android:id="@+id/action_mapSearchFragment_to_placeInsertFragment"
            app:destination="@id/placeInsertFragment" />
    </fragment>
    <fragment
        android:id="@+id/placeInsertFragment"
        android:name="com.example.witt.presentation.ui.plan.drawup_plan.PlaceInsertFragment"
        android:label="PlaceInsertFragment"
        android:layout="@layout/fragment_place_insert">
        <argument
            android:name="place"
            app:argType="com.example.witt.data.model.search.Place"
            app:nullable="false"/>
    </fragment>
    <include app:graph="@navigation/plan_nav" />
</navigation>